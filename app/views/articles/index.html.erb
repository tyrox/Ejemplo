<p id="notice"><%= notice %></p>
<div style="width:90%; margin:0 auto;">
<h2>Articles</h2>
<table>
  <thead>
    <tr>
      <th>Title </th>
      <th>Content </th>
      <th></th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td>
                  
        </td>
        <td class="blue"><%= link_to 'Show', article %></td>
        <% if article.user ==current_user%>
          <td class="blue"><%= link_to 'Edit', edit_article_path(article) %></td>
          <td class="red" ><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<p class="btn be-red white" style="width:3%"><%= link_to 'New', new_article_path %><p>
</div>
